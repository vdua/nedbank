{
  "name": "@adobe/helix-project-boilerplate",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Starter project for Adobe Helix",
  "scripts": {
    "test": "wtr \"./test/**/*.test.js\" --node-resolve --port=2000 --coverage",
    "test:watch": "npm test -- --watch",
    "lint:js": "eslint .",
    "lint:css": "stylelint 'blocks/**/*.css' 'styles/*.css'",
    "lint": "npm run lint:js",
    "lessc": "less-watch-compiler --run-once styles styles & less-watch-compiler --run-once blocks blocks",
    "hlx": "less-watch-compiler styles styles & less-watch-compiler blocks blocks & hlx up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adobe/helix-project-boilerplate.git"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-project-boilerplate/issues"
  },
  "homepage": "https://github.com/adobe/helix-project-boilerplate#readme",
  "devDependencies": {
    "@babel/core": "7.18.0",
    "@babel/eslint-parser": "7.17.0",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@web/test-runner": "0.13.28",
    "@web/test-runner-commands": "0.6.1",
    "chai": "4.3.6",
    "eslint": "8.16.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.26.0",
    "less": "^4.1.3",
    "less-watch-compiler": "^1.16.3",
    "sinon": "14.0.0",
    "stylelint": "14.8.3",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "25.0.0"
  }
